<Window x:Class="WPF_08_INotifyPropertyChanged_Interface.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_08_INotifyPropertyChanged_Interface"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <!--Es una interface que permite detectar cuando una propiedad ha sido cambiada-->
        <Label Width="100" Height="30" Margin="5" HorizontalContentAlignment="Center"> Num1 </Label>
        <TextBox Width="100" Height="30" Margin="5" Text="{Binding Path=Num1, Mode=TwoWay}"></TextBox>
        <Label Width="100" Height="30" Margin="5" HorizontalContentAlignment="Center"> Num2 </Label>
        <TextBox Width="100" Height="30" Margin="5" Text="{Binding Path=Num2, Mode=TwoWay}"></TextBox>
        <Label Width="100" Height="30" Margin="5" HorizontalContentAlignment="Center"> Resultado </Label>
        <TextBox Width="100" Height="30" Margin="5" Text="{Binding Path=Resultado, Mode=TwoWay}"></TextBox>
                
        
    </StackPanel>
</Window>
