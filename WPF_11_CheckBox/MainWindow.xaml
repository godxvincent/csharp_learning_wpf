<Window x:Class="WPF_11_CheckBox.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_11_CheckBox"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <Label FontWeight="Bold">Pizza Topins</Label>
        <CheckBox Name="cbAllTopings" IsThreeState="True" Checked="cbAllTopings_Changed" Unchecked="cbAllTopings_Changed"> All Topins </CheckBox>
        <StackPanel Margin="10,5,0,0">
            <CheckBox Name="cbSalami" Checked="cbSingleCheckedChanged" Unchecked="cbSingleCheckedChanged">
                <TextBlock> Salami <Run Foreground="ForestGreen" FontWeight="Bold">Spicy</Run></TextBlock>
            </CheckBox>
            <CheckBox Name="cbMushrooms" Checked="cbSingleCheckedChanged" Unchecked="cbSingleCheckedChanged">Mushrooms</CheckBox>
            <CheckBox Name="cbMozzarela" Checked="cbSingleCheckedChanged" Unchecked="cbSingleCheckedChanged">Mozzarela</CheckBox>
        </StackPanel>
    </StackPanel>
</Window>
